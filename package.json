{
  "name": "odessa-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot for schedule updates at Odessa Amsterdam Ecstatic Dance",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && mkdir -p public && echo 'API Server' > public/index.html",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "cli": "ts-node src/cli.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:wix-integration": "ts-node src/test-wix-integration.ts",
    "test:enhanced-whosplaying": "ts-node src/test-enhanced-whosplaying.ts",
    "test:weekly-schedule": "ts-node src/test-weekly-schedule.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postinstall": "npm run type-check"
  },
  "keywords": [
    "telegram",
    "bot",
    "schedule",
    "scraping",
    "amsterdam",
    "odessa",
    "events"
  ],
  "author": "Odessa Team",
  "license": "MIT",
  "dependencies": {
    "@vercel/node": "^5.3.7",
    "axios": "^1.6.0",
    "cheerio": "^1.1.2",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.3.1",
    "node-telegram-bot-api": "^0.64.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "@types/node-telegram-bot-api": "^0.64.9",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "22.x",
    "npm": ">=8.0.0"
  }
}
