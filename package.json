{
  "name": "odessa-telegram-bot",
  "version": "1.0.0",
  "description": "Automated schedule generation tool for Odessa boat events in Amsterdam",
  "main": "api/bot.ts",
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint api/**/*.ts",
    "lint:fix": "eslint api/**/*.ts --fix",
    "format": "prettier --write api/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "quick-start": "bash scripts/quick-start.sh",
    "deploy": "bash scripts/deploy.sh",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postinstall": "npm run type-check"
  },
  "keywords": [
    "telegram",
    "bot",
    "schedule",
    "amsterdam",
    "odessa",
    "events",
    "vercel"
  ],
  "author": "Odessa Team",
  "license": "MIT",
  "dependencies": {
    "@vercel/node": "^5.3.7",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kokosthief/odessa-telegram-bot.git"
  },
  "bugs": {
    "url": "https://github.com/kokosthief/odessa-telegram-bot/issues"
  },
  "homepage": "https://github.com/kokosthief/odessa-telegram-bot#readme"
}
